<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/baslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Hesap Makinesi"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sonuc"
        app:layout_constraintVertical_bias="0.483">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="187dp">

            <Button
                android:id="@+id/bir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#FD0D0D"
                android:onClick="sayisec"
                android:text="1"
                android:textColorLink="#050505"
                android:textSize="36dp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/iki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#FD0D0D"
                android:onClick="sayisec"
                android:text="2"
                android:textSize="36dp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/uc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="sayisec"
                android:text="3"
                android:textSize="36dp"
                tools:ignore="OnClick"
                android:backgroundTint="#FD0D0D"/>

            <Button
                android:id="@+id/arti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="islem"
                android:backgroundTint="#262322"
                android:textColor="@color/white"
                android:text="+"
                android:textSize="36dp"
                tools:ignore="OnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp">

            <Button
                android:id="@+id/dort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="sayisec"
                android:text="4"
                android:textSize="36dp"
                tools:ignore="OnClick"
                android:backgroundTint="#FD0D0D"/>

            <Button
                android:id="@+id/bes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="sayisec"
                android:text="5"
                android:textSize="36dp"
                tools:ignore="OnClick"
                android:backgroundTint="#FD0D0D"/>

            <Button
                android:id="@+id/altÄ±"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="sayisec"
                android:text="6"
                android:textSize="36dp"
                tools:ignore="OnClick"
                android:backgroundTint="#FD0D0D"/>

            <Button
                android:id="@+id/eksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="islem"
                android:backgroundTint="#262322"
                android:textColor="@color/white"
                android:text="-"
                android:textSize="36dp"
                tools:ignore="OnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp">

            <Button
                android:id="@+id/yedi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="sayisec"
                android:text="7"
                android:textSize="36dp"
                tools:ignore="OnClick"
                android:backgroundTint="#FD0D0D"/>

            <Button
                android:id="@+id/sekiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="sayisec"
                android:text="8"
                android:textSize="36dp"
                tools:ignore="OnClick"
                android:backgroundTint="#FD0D0D"/>

            <Button
                android:id="@+id/dokuz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="sayisec"
                android:text="9"
                android:textSize="36dp"
                tools:ignore="OnClick"
                android:backgroundTint="#FD0D0D"/>

            <Button
                android:id="@+id/carpi"
                android:layout_width="wrap_content"
                android:backgroundTint="#262322"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="islem"
                android:text="x"
                android:textSize="36dp"
                tools:ignore="OnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp">

            <Button
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#262322"
                android:textColor="@color/white"
                android:text="AC"
                android:textSize="36dp" />

            <Button
                android:id="@+id/sifir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="sayisec"
                android:backgroundTint="#FD0D0D"
                android:text="0"
                android:textSize="36dp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/esittir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="islem"
                android:text="="
                android:textSize="36dp"
                android:backgroundTint="#262322"
                android:textColor="@color/white"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/bolu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:onClick="islem"
                android:backgroundTint="#262322"
                android:textColor="@color/white"
                android:text="%"
                android:textSize="36dp"
                tools:ignore="OnClick" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:hint="0"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="100dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/baslik" />

</androidx.constraintlayout.widget.ConstraintLayout>
